{
  "name": "shadow-otc-nexus",
  "version": "0.1.0",
  "description": "Privacy-first OTC protocol for Solana whales",
  "private": true,
  "scripts": {
    "db:setup": "prisma generate --schema=prisma/schema.prisma && prisma db push --schema=prisma/schema.prisma",
    "db:studio": "prisma studio --schema=prisma/schema.prisma",
    "db:test": "tsx database/test-connection.ts",
    "db:migrate": "prisma migrate dev --schema=prisma/schema.prisma",
    "db:reset": "prisma migrate reset --schema=prisma/schema.prisma",
    "build": "tsc",
    "bot": "cd app/telegram-bot && pnpm dev",
    "bot:build": "cd app/telegram-bot && pnpm build",
    "bot:start": "cd app/telegram-bot && pnpm start",
    "dev": "tsx watch app/telegram-bot/src/index.ts",
    "test": "vitest",
    "lint": "eslint .",
    "build:repo": "pnpm -r build",
    "dev:repo": "pnpm -r --parallel dev",
    "test:unit": "vitest",
    "test:integration": "vitest",
    "test:e2e": "vitest",
    "test:load": "vitest",
    "deploy:devnet": "tsx scripts/deploy-devnet.ts",
    "deploy:programs": "tsx scripts/deploy-programs.ts",
    "deploy:magicblock": "tsx scripts/init-magicblock-session.ts",
    "prepare": "husky install",
    "format": "prettier -w .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@solana/web3.js": "^1.95.8",
    "@coral-xyz/anchor": "^0.30.1",
    "grammy": "^1.30.0",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "eslint": "^9.13.0",
    "prettier": "^3.3.3",
    "@typescript-eslint/parser": "^7.16.1",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
