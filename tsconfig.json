{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {},
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "packages/**/*",
    "programs/**/*",
    "scripts/**/*",
    "tests/**/*",
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
